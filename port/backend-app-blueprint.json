{
    "identifier": "backend-app",
    "description": "This blueprint represents a backend application",
    "title": "Backend App",
    "icon": "Microservice",
    "schema": {
      "properties": {
        "url": {
          "type": "string",
          "title": "Github URL",
          "icon": "Github",
          "format": "url",
          "default": "https://git.com",
          "description": "The link to the GitHub repo"
        },
        "language": {
          "type": "string",
          "icon": "Git",
          "title": "Language",
          "default": "Go",
          "enum": [
            "Go"
          ],
          "enumColors": {
            "Go": "red"
          }
        },
        "host": {
          "type": "string",
          "title": "Host",
          "description": "Host"
        },
        "db-version": {
          "type": "string",
          "title": "DB Version",
          "description": "DB version"
        },
        "db-size": {
          "type": "string",
          "title": "DB Size",
          "enum": [
            "Small",
            "Medium",
            "Large"
          ],
          "description": "DB size"
        },
        "availableReplicas": {
          "type": "number",
          "title": "Running Replicas",
          "description": "Current running replica count"
        },
        "labels": {
          "type": "object",
          "title": "Labels",
          "description": "Labels of the workload"
        },
        "containers": {
          "type": "array",
          "title": "Containers",
          "default": [],
          "description": "The containers for each pod instance of the workload"
        },
        "isHealthy": {
          "type": "string",
          "enum": [
            "Healthy",
            "Unhealthy"
          ],
          "enumColors": {
            "Healthy": "green",
            "Unhealthy": "red"
          },
          "title": "Workload Health"
        }
      },
      "required": [
        "url",
        "language"
      ]
    },
    "mirrorProperties": {},
    "calculationProperties": {},
    "relations": {
      "environment": {
        "target": "environment",
        "many": false,
        "required": true,
        "title": "Environment"
      }
    }
  }
  