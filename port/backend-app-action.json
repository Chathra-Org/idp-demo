[
  {
    "identifier": "create-backend",
    "title": "Create Backend App",
    "userInputs": {
      "properties": {
        "repo-user": {
          "type": "string",
          "title": "Repo User",
          "default": "vfarcic"
        },
        "repo-name": {
          "type": "string",
          "title": "Repo Name",
          "default": ""
        },
        "image-repo": {
          "type": "string",
          "title": "Image repository",
          "default": ""
        },
        "environment": {
          "type": "string",
          "title": "Environment",
          "enum": ["production", "staging", "development"],
          "default": "production"
        },
        "host": {
          "type": "string",
          "title": "Host",
          "default": "my-app.acme.com"
        }
      },
      "required": ["repo-user", "repo-name", "environment", "port"]
    },
    "invocationMethod": {
      "type": "WEBHOOK",
      "url": "https://example.com"
    },
    "trigger": "CREATE",
    "description": "Create a new backend application."
  },
